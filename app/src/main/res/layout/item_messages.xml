<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearMainMessage"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:background="@drawable/round_20_shadow_bottom_10"
    android:layout_marginBottom="20dp"
    android:gravity="center|start"
    android:orientation="horizontal"
    android:paddingTop="20dp"
    android:paddingHorizontal="20dp"
    android:paddingBottom="30dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        app:cardCornerRadius="90dp">

        <ImageView
            android:id="@+id/itemProfilePicture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_picture" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Hüseyin Samet Çakır"
            android:textColor="@color/color_434343"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/thanks_with_folded_hands_emoji"
            android:textColor="@color/color_434343"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="13.45"
            android:textColor="@color/color_717171"
            android:textSize="12sp" />

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/round_90_light_blue"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/color_434343"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
