<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    tools:context=".ui.activity.UserChangePasswordActivity">

    <FrameLayout
        android:id="@+id/linearHeadingNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:elevation="0dp"
        android:orientation="horizontal"
        android:background="@color/background_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="40dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/arrow_left" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPastReservations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:text="Şifremi Değiştir"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="*Şifreniz 8-25 karakter arası olmalı, yineleme içermemelidir ve ardışık karaterlerden oluşmamalıdır."
            android:layout_marginTop="80dp"
            android:textColor="@color/color_717171"
            android:textStyle="italic"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/linearVet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_20_shadow_bottom_10"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp">


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/account_change_password" />


            <EditText
                android:id="@+id/etOld"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/none"
                android:maxLength="25"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start|center"
                android:layout_weight="1"
                android:hint="Şifreniz"
                android:inputType="textPassword"
                android:paddingHorizontal="20dp"
                android:textColor="@color/color_717171"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/ivToggle1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/eye_show" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_20_shadow_bottom_10"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp">


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/account_change_password" />


            <EditText
                android:id="@+id/etNew"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:maxLength="25"
                android:background="@color/none"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start|center"
                android:hint="Yeni Şifreniz"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:paddingHorizontal="20dp"
                android:textColor="@color/color_717171"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />
            <ImageView
                android:id="@+id/ivToggle2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/eye_show" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_20_shadow_bottom_10"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp">


            <ImageView
                android:id="@+id/imgVet"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/account_change_password" />


            <EditText
                android:id="@+id/etAgain"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/none"
                android:maxLength="25"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start|center"
                android:hint="Yeni Şifreniz (Tekrar)"
                android:inputType="textPassword"
                android:paddingHorizontal="20dp"
                android:textColor="@color/color_717171"
                android:textCursorDrawable="@null"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/ivToggle3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/eye_show" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/round_20_light_blue"
        android:text="Şifremi Değiştir"
        android:textAllCaps="false"
        android:textColor="@color/color_4B4B4B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>